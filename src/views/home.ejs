<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    tr:hover {background-color: coral;}

    .table-container{
        padding: 15px 20px;
    }
    .title{
        font-size: 25px;
        font-weight: 600;
        padding-bottom: 10px;
    }
    </style>

<body>

    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Users</a>

    </div>

    <div class="table-container">
        <div class="title">List Users</div>
        <table>
            <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Name</th>
            <th>City</th>
            <th>Actions</th>
            </tr>

            <!-- vòng lặp hiển thị dữ liệu database ra bảng -->
            <% for(let i = 0; i< listUsers.length ; i++) { %>
                <tr>
                    <td><%=listUsers[i].id  %></td>
                    <td><%=listUsers[i].email  %></td>
                    <td><%=listUsers[i].name  %></td>
                    <td><%=listUsers[i].city  %></td>
                    <td>
                        <a href="/update/<%=listUsers[i].id %>">Edit</a>
                        <form action="/delete-user/<%=listUsers[i].id %>" method="POST">
                            <button>Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>

